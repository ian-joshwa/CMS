@page
@model LoginModel
 
@{
    Layout = "/Views/Shared/_Links.cshtml";
}

<div class="side-spacing-container">
    <div class="row">
        <div class="col-md-6">
            <section class="account-card">
                <form id="account" method="post">
                    <h2>Login</h2>
                    <p>If you have account with us, please login.</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.Email" class="form-label">Email<span class="text-danger">*</span></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="account-btn-con">
                        <button id="login-submit" type="submit" class="btn account-btn">Log in</button>
                        <a id="forgot-password" class="btn account-btn" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                    @* <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div> *@
                </form>
            </section>
        </div>
        <div class="col-md-5 col-md-offset-2 ms-5">
            <section class="account-card">
                <h3>Register for an account.</h3>
                <div>
                    <p>
                        All staff at member organisations can access our online content for free. Check whether your organisation is a member and register today.
                    </p>
                </div>
                <div class="account-btn-con">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn account-btn">Register</a>
                </div>
            </section>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 

