@page
@using CMS.CommonHelper;
@model RegisterModel
@{
    ViewData["Title"] = "Central College";
    TempData["Title"] = "Register";
    Layout = "/Views/Shared/_Links.cshtml";
}

<div class="side-spacing-container">
    <div class="row">
        <div class="col-md-6">
            <section class="account-card">
                <form id="account" method="post">
                    <h2>Register</h2>
                    <p>If you have account with us, please login.</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.FirstName" class="form-label"></label>
                        <input asp-for="Input.FirstName" class="form-control" aria-required="true" />

                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <input asp-for="Input.LastName" class="form-control" aria-required="true" />

                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />

                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.CNIC" class="form-label"></label>
                        <input asp-for="Input.CNIC" type="text" class="form-control" aria-required="true" />

                        <span asp-validation-for="Input.CNIC" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.DOB" class="form-label"></label>
                        <input asp-for="Input.DOB" type="date" class="form-control" aria-required="true" />

                        <span asp-validation-for="Input.DOB" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.Gender" class="form-label"></label>
                        <select asp-for="Input.Gender" asp-items="Gender.GetGenders()" class="form-control">
                            <option selected disabled>-- Select Gender --</option>
                        </select>

                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.Address" class="form-label"></label>
                        <input asp-for="Input.Address" class="form-control" aria-required="true" />

                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" type="text" class="form-control" aria-required="true" />

                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.Age" class="form-label"></label>
                        <input asp-for="Input.Age" type="number" class="form-control" aria-required="true" />

                        <span asp-validation-for="Input.Age" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />

                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />

                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="account-btn-con">
                        <button id="registerSubmit" type="submit" class="w-100 btn custom-btn">Register</button>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-5 col-md-offset-2 ms-5">
            <section class="account-card">
                <h3>Login to account.</h3>
                <div>
                    <p>
                        All staff at member organisations can access our online content for free. Check whether your organisation is a member and register today.
                    </p>
                </div>
                <div class="account-btn-con">
                    <a asp-page="./Login" class="btn account-btn">Login</a>
                </div>
            </section>
        </div>
    </div>

</div>

