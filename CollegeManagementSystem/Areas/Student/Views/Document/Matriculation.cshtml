@using CMS.Models
@model StudentDocument;

@{

    ViewData["Title"] = "Central College";
    TempData["Title"] = "Matriculation";
    
}


<div class="row">

    <div class="col-12">

        <form method="post" enctype="multipart/form-data" >
            <input asp-for="Id" type="hidden" />
            <label asp-for="Combination">Combination</label>
            <select asp-for="Combination" asp-items="@ViewBag.Combination" class="form-control">
                <option disabled selected>- Select -</option>
            </select>
            <span asp-validation-for="Combination" class="text-danger"></span>

            <label asp-for="TotalMarks">Total Marks</label>
            <input asp-for="TotalMarks" class="form-control" />
            <span asp-validation-for="TotalMarks" class="text-danger"></span>


            <label asp-for="ObtainedMarks">Obtained Marks</label>
            <input asp-for="ObtainedMarks" class="form-control" />
            <span asp-validation-for="ObtainedMarks" class="text-danger"></span>

            @if(Model.Document != "" && Model.Document != null)
            {
                <label>Document</label>
                <div style="width:250px; height: 350px;">
                    <img src="@Model.Document" style="width:100%; height: 100%; object-fit:cover;" />
                </div>
            }

            <label asp-for="Document" class="mt-3">Upload Document</label>
            <input asp-for="Document" type="file" id="file" name="file" accept=".png, .jpg, .jpeg" />
            <span asp-validation-for="Document" class="text-danger"></span>

            <br />
            <br />
            <button type="submit" class="btn custom-btn">Save</button>
            <a class="btn btn-secondary" asp-controller="Document" asp-action="Index">Back to List</a>
        
        </form>

    </div>


</div>


@section scripts {

    <partial name="_ValidationScriptsPartial" />


}