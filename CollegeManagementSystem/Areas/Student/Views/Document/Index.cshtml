@using CMS.Models


@{

    ViewData["Title"] = "Central College";
    TempData["Title"] = "Documents";
    var Inter = (StudentDocument)ViewBag.Inter;
    var Matric = (StudentDocument)ViewBag.Matric;

}

<div class="row">

    <div class="col-12">

        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>Document Type</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>

                <tr>
                    <td>
                        Matriculation
                    </td>
                    <td>
                        @if(ViewBag.IsMatric){
                            <a class="btn custom-btn" asp-area="Student" asp-controller="Document" asp-action="Matriculation" asp-route-Id="@Matric.Id">Update</a>
                        }
                        else
                        {
                            <a class="btn custom-btn" asp-area="Student" asp-controller="Document" asp-action="Matriculation" asp-route-Id="@Matric.Id">Add</a>
                        }
                    </td>
                </tr>

                <tr>
                    <td>
                        Intermediate
                    </td>
                    <td>
                        @if (ViewBag.IsInter)
                        {
                            <a class="btn custom-btn" asp-area="Student" asp-controller="Document" asp-action="Intermediate" asp-route-Id="@Inter.Id">Update</a>
                        }
                        else
                        {
                            <a class="btn custom-btn" asp-area="Student" asp-controller="Document" asp-action="Intermediate" asp-route-Id="@Inter.Id">Add</a>
                        }
                    </td>
                </tr>

            </tbody>

        </table>

    </div>


</div>

