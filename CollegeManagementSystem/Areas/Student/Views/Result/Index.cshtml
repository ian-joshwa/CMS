@using CMS.Models
@model List<Result>
@{
    ViewData["Title"] = "Central College";
    TempData["Title"] = "Result";
}


<div class="row">


    @if (Model.Count > 0)
    {

        @for (int i = 1; i <= Model.ElementAt(Model.Count - 1).Course.CourseYear.Year; i++)
        {

            <table class="table table-bordered table-striped mb-3">

                <thead>

                    <tr>
                        <th colspan="3">Year @i</th>
                    </tr>
                    <tr>
                        <th style="width: 50%;">Course Name</th>
                        <th style="width: 25%;">Total Marks</th>
                        <th style="width: 25%;">Obtained Marks</th>
                    </tr>

                </thead>

                <tbody>

                    @foreach (var result in Model.Where(x => x.Course.CourseYear.Year == i))
                    {
                        <tr>
                            <td>@result.Course.Name</td>
                            <td>@result.TotalMarks</td>
                            <td>@result.Marks</td>
                        </tr>

                    }


                </tbody>

            </table>


        }

    }
    else
    {
        <h5 class="text-info">Result Not Found</h5>
    }


</div>