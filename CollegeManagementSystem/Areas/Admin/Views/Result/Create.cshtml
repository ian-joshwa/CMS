@using CMS.CommonHelper;

@model CMS.Models.Result

<div>

    <div class="row mb-4">

        <div class="col-12">

            <h2 class="m-0">Add Result</h2>

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <form method="post">

                @*  <span asp-validation-for="SessionId"></span> *@

                 <label asp-for="StudentRegistrationId" class="mt-3">Student Registration</label>
                <select asp-for="StudentRegistrationId" asp-items="@ViewBag.StudentRegistrationList" class="form-control">
                <option selected disabled>-- Select Student Registration --</option>
                </select>
                <span asp-validation-for="StudentRegistrationId"></span>

                <label asp-for="ExaminationId" class="mt-3">Examination</label>
                <select asp-for="ExaminationId" asp-items="@ViewBag.ExaminationList" class="form-control">
                    <option selected disabled>-- Select Examination --</option>
                </select>
                <span asp-validation-for="ExaminationId"></span>


                <label asp-for="Marks"> Marks</label>
                <input asp-for="Marks" class="form-control" />
                <span asp-validation-for="Marks"></span>

                <button type="submit" class="btn btn-success mt-3">Save</button>

            </form>

            <a class="btn btn-secondary mt-2" asp-area="Admin" asp-controller="Result" asp-action="Index">Back to list</a>

        </div>

    </div>


</div>

@section scripts {

    <script>

        tinymce.init({
            selector: 'textarea'
        })

    </script>

    @{
        <partial name="_ValidationScriptsPartial" />

    }

}