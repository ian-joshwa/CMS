@{
    ViewData["Title"] = "Result";
}

<div>

    <div class="row mb-4">
        <div class="col-6">
            <h2 class="m-0">Results</h2>
        </div>

        <div class="col-6 button-col">
            <a asp-area="Admin" asp-controller="Result" asp-action="Create" class="btn custom-btn">Add</a>
        </div>
    </div>

    <div class="row">

        <div class="col-12">

            <table class="table table-bordered" id="ResultTable">

                <thead>
                    <tr>
                        <th>Student </th>
                        <th>Exam</th>
                        <th>Marks</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>

</div>


@section scripts {

    <script>

        let ResultTable;

        ResultTable = $('#ResultTable').DataTable({

            "ajax": {
                "url": "/Admin/Result/GetResults"
            },
            "columns": [

                {
                    "data": "studentRegistration.applicationUser",
                    "render": function (data) {
                        return `${data.firstName} ${data.lastName}`;
                    }
                },
                { "data": "examination.examName" }
                ,
                // { "data": "session.sessionName" },
                { "data": "marks" },
                {
                    "data": "id",
                    "render": function (data) {
                        return `
                                <a class="edit-btn" href="/Admin/Result/Update?id=${data}"><i class="bi bi-pencil-square"></i></a>
                                <a class="delete-btn" onclick=RemoveResult("/Admin/Result/Delete/${data}")><i class="bi bi-trash3-fill"></i></a>
                            `;
                    }
                }

            ]


        });


        function RemoveResult(url) {

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {

                    var xmlHttp = new XMLHttpRequest();


