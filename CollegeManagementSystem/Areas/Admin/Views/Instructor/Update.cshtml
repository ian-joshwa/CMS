@using CMS.CommonHelper;

@model CMS.Models.Instructor

<div>

    <div class="row mb-4">

        <div class="col-12">

            <h2 class="m-0">Edit Instructor</h2>

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <form method="post">
                <label asp-for="Name"> Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
@* 
                <label asp-for="Name"> Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
 *@
                <label asp-for="DepartmentId" class="mt-3">Department</label>
                <select asp-for="DepartmentId" asp-items="@ViewBag.Departmentlist" class="form-control">
                    <option selected disabled>-- Select Department --</option>
                </select>
                <span asp-validation-for="DepartmentId"></span>


                <label asp-for="DOB"> DOB</label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB"></span>


                <label asp-for="HiredDate">Hired Date</label>
                <input asp-for="HiredDate" class="form-control" />
                <span asp-validation-for="HiredDate"></span>


                <label asp-for="Gender" class="mt-3">Gender</label>
                <select class="form-control" asp-for="Gender" asp-items="Gender.GetGenders()">
                    <option selected disabled>-- Select Gender --</option>
                </select>
                <span asp-validation-for="Gender"></span>

                <button type="submit" class="btn custom-btn mt-2 mb-1">Save</button>

            </form>

            <a class="btn btn-secondary mt-2" asp-area="Admin" asp-controller="Instructor" asp-action="Index">Back to list</a>

        </div>

    </div>


</div>

@section scripts {

    <script>

        tinymce.init({
            selector: 'textarea'
        })

    </script>

    @{
        <partial name="_ValidationScriptsPartial" />

    }

}