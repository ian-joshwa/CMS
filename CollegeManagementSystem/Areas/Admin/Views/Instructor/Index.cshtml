@{
    ViewData["Title"] = "Instructor";
}

<div>

    <div class="row mb-4">
        <div class="col-6">
            <h2 class="m-0">Instructors</h2>
        </div>

        <div class="col-6">
            <a asp-area="Admin" asp-controller="Instructor" asp-action="Create" class="btn btn-primary">Add Instructor</a>
        </div>
    </div>

    <div class="row">

        <div class="col-12">

            <table class="table table-bordered" id="InstructorTable">

                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Department</th>
                        <th>DOB</th>
                        <th>HiredDate</th>
                        <th>Gender</th>

                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>

</div>


@section scripts {

    <script>

        let InstructorTable;

        InstructorTable = $('#InstructorTable').DataTable({

            "ajax": {
                "url": "/Admin/Instructor/GetInstructors"
            },
            "columns": [

                { "data": "name" },

                {
                    "data": "department.name"
                },

                { 
                    "data": "dob",
                    "render": function (data) {
                        const date = new Date(data);
                        return date.toLocaleDateString('en-PK');
                    }
                },
                {
                    "data": "hiredDate",
                    "render": function (data) {
                        const date = new Date(data);
                        return date.toLocaleDateString('en-PK');
                    }
                },
                { "data": "gender" },

                
                {
                    "data": "id",
                    "render": function (data) {
                        return `
                                <a class="btn btn-primary" href="/Admin/Instructor/Update?id=${data}">Edit</a>
                                <a class="btn btn-danger" onclick=RemoveInstructor("/Admin/Instructor/Delete/${data}")>Delete</a>
                            `
                    }
                }

            ]


        });


