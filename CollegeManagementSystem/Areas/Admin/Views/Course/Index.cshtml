@{
    ViewData["Title"] = "Central College";
    TempData["Title"] = "Courses";
}

<div>

    <div class="row mb-4">
        <div class="col-6">
            <h2 class="m-0">Courses</h2>
        </div>

        <div class="col-6 button-col">
            <a class="custom-btn btn" asp-area="Admin" asp-controller="Course" asp-action="Create">Add</a>
        </div>
    </div>

    <div class="row">

        <div class="col-12">

            <table class="table table-bordered" id="CourseTable">

                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Session</th>
                        <th>Course Year</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>

</div>


