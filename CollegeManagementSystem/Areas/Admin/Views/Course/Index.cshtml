        let CourseTable;

        CourseTable = $('#CourseTable').DataTable({

            "ajax": {
                "url": "/Admin/Course/GetCourses"
            },
            "columns": [

                { "data": "name" },
                {
                    "data": "session.sessionName"
                },
                {
                    "data": "courseYear.year"
                },
                {
                    "data": "id",
                    "render": function (data) {
                        return `
                                <a class="edit-btn" href="/Admin/Course/Update?id=${data}"><i class="bi bi-pencil-square"></i></a>
                                <a class="delete-btn" onclick=RemoveCourse("/Admin/Course/Delete/${data}")><i class="bi bi-trash3-fill"></i></a>
