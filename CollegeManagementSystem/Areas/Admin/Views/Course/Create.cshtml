@using CMS.CommonHelper;

@model CMS.Models.Course

<div>

    <div class="row mb-4">

        <div class="col-12">

            <h2 class="m-0">Add Course</h2>

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <form method="post">

               @*  <span asp-validation-for="SessionId"></span> *@
                <label asp-for="Name">Course Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>

                <label asp-for="CreditHours" class="mt-3">Credit Hours</label>
                <input asp-for="CreditHours" type="int" class="form-control" />
                <span asp-validation-for="CreditHours"></span>

               @*  <label asp-for="InstructorId" class="mt-3">Instructor</label>
                <select asp-for="InstructorId" asp-items="@ViewBag.InstructorList" class="form-control">
                    <option selected disabled>-- Select Instructor --</option>
                </select> *@

                <label asp-for="SessionId" class="mt-3">Session</label>
                <select asp-for="SessionId" asp-items="@ViewBag.SessionList" class="form-control">
                    <option selected disabled>-- Select Session --</option>
                </select>
                <span asp-validation-for="SessionId"></span>

                <button type="submit" class="btn btn-success mt-3">Save</button>

            </form>

            <a class="btn btn-secondary mt-2" asp-area="Admin" asp-controller="Course" asp-action="Index">Back to list</a>

        </div>

    </div>


</div>

@section scripts {

    <script>

        tinymce.init({
            selector: 'textarea'
        })

    </script>

    @{
        <partial name="_ValidationScriptsPartial" />

    }

}