@using CMS.CommonHelper;

@model CMS.Models.Course

@{
    ViewData["Title"] = "Central College";
    TempData["Title"] = "Course";
}

<div>

    <div class="row mb-4">

        <div class="col-12">

            <h2 class="m-0">Add Course</h2>

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <form method="post">

                <label asp-for="Name">Course Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>

                <label asp-for="SessionId" class="mt-3">Session</label>
                <select asp-for="SessionId" asp-items="@ViewBag.SessionList" class="form-control">
                    <option selected disabled>-- Select Session --</option>
                </select>
                <span asp-validation-for="SessionId"></span>

                <label asp-for="CourseYearId" class="mt-3">Course Year</label>
                <select asp-for="CourseYearId" asp-items="@ViewBag.CourseYearlist" class="form-control">
                    <option selected disabled>-- Select Year --</option>
                </select>
                <span asp-validation-for="CourseYearId"></span>

                <button type="submit" class="btn custom-btn mb-1 mt-2">Save</button>

            </form>

            <a class="btn btn-secondary mt-2" asp-area="Admin" asp-controller="Course" asp-action="Index">Back to list</a>

        </div>

    </div>


</div>

@section scripts {

    <script>

        tinymce.init({
            selector: 'textarea'
        })

    </script>

    @{
        <partial name="_ValidationScriptsPartial" />

    }

}