@{
    ViewData["Title"] = "Examination";
}

<div>

    <div class="row mb-4">
        <div class="col-6">
            <h2 class="m-0">Examination</h2>
        </div>

        <div class="col-6">
            <a asp-area="Admin" asp-controller="Examination" asp-action="Create" class="btn btn-primary">Add Session</a>
        </div>
    </div>

    <div class="row">

        <div class="col-12">

            <table class="table table-bordered" id="ExaminationTable">

                <thead>
                    <tr>
                        <th>Exam Name</th>
                        <th>Exam Date</th>
                        @* <th>Session</th> *@
                        <th>Course</th>
                        <th>Total Marks</th>
                        <th>Duration</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>

</div>


@section scripts {

    <script>

        let ExaminationTable;

        ExaminationTable = $('#ExaminationTable').DataTable({

            "ajax": {
                "url": "/Admin/Examination/GetExaminations"
            },
            "columns": [

                { "data": "examName" },
                {
                    "data": "examDate",
                    "render": function (data) {
                        const date = new Date(data);
                        return date.toLocaleDateString('en-PK');
                    }
                },
                // { "data": "session.sessionName" },
                { "data": "course.name" },
                { "data": "totalMarks" },
                { "data": "duration" },
                {
                    "data": "id",
                    "render": function (data) {
                        return `
                                    <a class="btn btn-primary" href="/Admin/Examination/Update?id=${data}">Edit</a>
                                    <a class="btn btn-danger" onclick=RemoveExamination("/Admin/Examination/Delete/${data}")>Delete</a>
                                `
                    }
                }

            ]


        });


