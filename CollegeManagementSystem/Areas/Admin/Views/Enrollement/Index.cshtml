@{
    ViewData["Title"] = "Enrollement";
}

<div>

    <div class="row mb-4">
        <div class="col-6">
            <h2 class="m-0">Enrollements</h2>
        </div>

        <div class="col-6">
            <a asp-area="Admin" asp-controller="Enrollement" asp-action="Create" class="btn btn-primary">Add Enrollement</a>
        </div>
    </div>

    <div class="row">

        <div class="col-12">

            <table class="table table-bordered" id="EnrollementTable">

                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Session</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>

</div>


@section scripts {

    <script>

        let EnrollementTable;

        EnrollementTable = $('#EnrollementTable').DataTable({

            "ajax": {
                "url": "/Admin/Enrollement/GetEnrollements"
            },
            "columns": [


                {
                    "data": "studentRegistration.applicationUser",
                    "render": function (data) {
                        return `${data.firstName} ${data.lastName}`;
                    }
                },
                {
                    "data": "session.sessionName"
                },
                {
                    "data": "id",
                    "render": function (data) {
                        return `
                                <a class="btn btn-primary" href="/Admin/Enrollement/Update?id=${data}">Edit</a>
                                <a class="btn btn-danger" onclick=RemoveEnrollement("/Admin/Enrollement/Delete/${data}")>Delete</a>
                            `
                    }
                }

            ]


        });


