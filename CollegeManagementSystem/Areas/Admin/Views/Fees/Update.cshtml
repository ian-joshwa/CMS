@using CMS.CommonHelper;

@model CMS.Models.Fees

<div>

    <div class="row mb-4">

        <div class="col-12">

            <h2 class="m-0">Edit Fees</h2>

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <form method="post">

                <label asp-for="StudentRegistrationId" class="mt-3">StudentRegistration</label>
                <select asp-for="StudentRegistrationId" asp-items="@ViewBag.StudentRegistrationList" class="form-control">
                    <option selected disabled>-- Select Student Registration  --</option>
                </select>
                <span asp-validation-for="StudentRegistrationId"></span>


                <label asp-for="Amount"> Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount"></span>


                <label asp-for="DueDate">Due Date</label>
                <input asp-for="DueDate" type="date" class="form-control" />
                <span asp-validation-for="DueDate"></span>

                <label asp-for="PaidDate">Paid Date</label>
                <input asp-for="PaidDate" type="date" class="form-control" />
                <span asp-validation-for="PaidDate"></span>


                <label asp-for="Status" class="mt-3">Status</label>
                <select class="form-control" asp-for="Status" asp-items="SessionStatus.GetSessionStatus()">
                    <option selected disabled>-- Select Status --</option>
                </select>
                <span asp-validation-for="Status"></span>





                <button type="submit" class="btn custom-btn mt-2 mb-1">Save</button>

            </form>

            <a class="btn btn-secondary mt-2" asp-area="Admin" asp-controller="Fees" asp-action="Index">Back to list</a>

        </div>

    </div>


</div>

@section scripts {

    <script>

        tinymce.init({
            selector: 'textarea'
        })

    </script>

    @{
        <partial name="_ValidationScriptsPartial" />

    }

}