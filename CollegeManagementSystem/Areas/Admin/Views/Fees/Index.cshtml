@{
    ViewData["Title"] = "Fee";
}

<div>

    <div class="row mb-4">
        <div class="col-6">
            <h2 class="m-0">Fees</h2>
        </div>

        <div class="col-6 button-col">
            <a asp-area="Admin" asp-controller="Fees" asp-action="Create" class="btn custom-btn">Add</a>
        </div>
    </div>

    <div class="row">

        <div class="col-12">

            <table class="table table-bordered" id="FeesTable">

                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Amount</th>
                        <th>Due Date</th>
                        <th>Paid Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>

</div>


@section scripts {

    <script>

        let FeesTable;

        FeesTable = $('#FeesTable').DataTable({

            "ajax": {
                "url": "/Admin/Fees/GetFees"
            },
            "columns": [

                {
                    "data": "studentRegistration.applicationUser",
                    "render": function (data) {
                        return `${data.firstName} ${data.lastName}`;
                    }
                },
                { "data": "amount" },
                {
                    "data": "dueDate",
                    "render": function (data) {
                        const date = new Date(data);
                        return date.toLocaleDateString('en-PK');
                    }
                },
                {
                    "data": "paidDate",
                    "render": function (data) {
                        const date = new Date(data);
                        return date.toLocaleDateString('en-PK');
                    }
                },
                { "data": "status" },
                {
                    "data": "id",
                    "render": function (data) {
                        return `
                                <a class="edit-btn" href="/Admin/Fees/Update?id=${data}"><i class="bi bi-pencil-square"></i></a>
                                <a class="delete-btn" onclick=RemoveFees("/Admin/Fees/Delete/${data}")><i class="bi bi-trash3-fill"></i></a>
                            `
                    }
                }

            ]


        });


        function RemoveFees(url) {

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {

                    var xmlHttp = new XMLHttpRequest();


