@using CMS.CommonHelper;

@model CMS.Models.Session

<div>

    <div class="row mb-4">

        <div class="col-12">

            <h2 class="m-0">Update Session</h2>

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <form method="post">
                <input type="hidden" asp-for="SessionId" />
                <label asp-for="SessionName">Session Name</label>
                <input asp-for="SessionName" class="form-control" />
                <span asp-validation-for="SessionName"></span>

                <label asp-for="Description" class="mt-3">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>

                <label asp-for="StartTime" class="mt-3">Start Time</label>
                <input asp-for="StartTime" type="date" class="form-control" />
                <span asp-validation-for="StartTime"></span>

                <label asp-for="EndTime" class="mt-3">End Time</label>
                <input asp-for="EndTime" type="date" class="form-control" />
                <span asp-validation-for="EndTime"></span>

                <label asp-for="Capacity" class="mt-3">Capacity</label>
                <input asp-for="Capacity" type="number" class="form-control" />
                <span asp-validation-for="Capacity"></span>

                <label asp-for="EnrolledCount" class="mt-3">Enrolled Count</label>
                <input asp-for="EnrolledCount" type="number" class="form-control" />
                <span asp-validation-for="EnrolledCount"></span>

                <label asp-for="Status" class="mt-3">Status</label>
                <select class="form-control" asp-for="Status" asp-items="SessionStatus.GetSessionStatus()">
                    <option selected disabled>-- Select Status --</option>
                </select>
                <span asp-validation-for="Status"></span>

                <button type="submit" class="btn btn-success mt-3">Save</button>

            </form>

            <a class="btn btn-secondary mt-2" asp-area="Admin" asp-controller="Session" asp-action="Index">Back to list</a>

        </div>

    </div>


</div>

@section scripts {

    <script>

        tinymce.init({
            selector: 'textarea'
        })

    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}